name: Docker Image CI

on:
  push:
    branches:
      - main  # 触发动作的分支，可以是其他分支或标签
  pull_request:
    branches:
      - main

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Log in to Docker Hub
      uses: docker/login-action@v2
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}

    - name: Set up QEMU
      uses: docker/setup-qemu-action@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2

    - name: Build the Docker image
      run: |
        docker build --tag oops-icons-site:${{ github.sha }} .

    - name: Tag the Docker image
      run: |
        docker tag oops-icons-site:${{ github.sha }} oops-icons-site:latest
        docker tag oops-icons-site:${{ github.sha }} ${DOCKER_USERNAME}/oops-icons-site:${{ github.sha }}
        docker tag oops-icons-site:${{ github.sha }} ${DOCKER_USERNAME}/oops-icons-site:latest

    - name: Push the Docker image
      run: |
        docker push ${DOCKER_USERNAME}/oops-icons-site:${{ github.sha }}
        docker push ${DOCKER_USERNAME}/oops-icons-site:latest
